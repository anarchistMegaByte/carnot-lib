    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="appButtonStyle">@style/AppButton</item>
        <item name="appCheckBoxStyle">@style/AppCheckBox</item>
        <item name="appEditTextStyle">@style/AppEditText</item>
        <item name="appRadioButtonStyle">@style/AppRadioButton</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>

        <!-- animation for activities-->
        <item name="android:windowContentTransitions">true</item>

    </style>
