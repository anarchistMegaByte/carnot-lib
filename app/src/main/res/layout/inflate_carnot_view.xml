<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/scale_16dp"
    android:layout_marginRight="@dimen/scale_16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale_72dp"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/scale_17dp">

            <com.carnot.custom_views.AppTextViewMedium
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Narayan Karthikeyan"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16sp"
                tools:text="Narayan Karthikeyan" />

            <com.carnot.custom_views.AppTextViewLight
                android:id="@+id/txt_gender_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scale_8dp"
                android:text="Male 45"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_12sp"
                tools:text="Male 45" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/scale_56dp"
                android:layout_marginRight="@dimen/scale_1dp"
                android:layout_weight="1"
                android:background="@color/carnot_list_row_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/scale_5dp"
                android:paddingTop="@dimen/scale_5dp">

                <com.carnot.custom_views.AppTextViewLight
                    android:id="@+id/txt_drive_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="72"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_24sp"
                    tools:text="72" />

                <com.carnot.custom_views.AppTextViewLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Drive Score"
                    android:textAllCaps="true"
                    android:textSize="@dimen/textsize_12sp"
                    android:textStyle="bold"
                    tools:text="Drive Score" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/scale_56dp"
                android:layout_weight="1"
                android:background="@color/carnot_list_row_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/scale_5dp"
                android:paddingTop="@dimen/scale_5dp">

                <com.carnot.custom_views.AppTextViewLight
                    android:id="@+id/txt_trips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="36"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_24sp"
                    tools:text="36" />

                <com.carnot.custom_views.AppTextViewLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TRIPS"
                    android:textAllCaps="true"
                    android:textSize="@dimen/textsize_12sp"
                    android:textStyle="bold"
                    tools:text="TRIPS" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="right"-->
        <!--android:layout_marginRight="@dimen/scale_10dp"-->
        <!--android:src="@drawable/ic_ribben" />-->

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/scale_64dp"
        android:layout_height="@dimen/scale_64dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/scale_8dp"

         />

</FrameLayout>