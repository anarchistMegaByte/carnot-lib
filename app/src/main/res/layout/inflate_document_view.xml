<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:elevation="@dimen/scale_10dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="0dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_document_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scale_160dp"
                android:background="@color/black"
                android:scaleType="centerCrop"
                android:src="@drawable/img_pancard" />

            <ProgressBar
                android:id="@+id/progress_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale_56dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:gravity="left|center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/scale_5dp">

            <com.carnot.custom_views.AppTextViewMedium
                android:id="@+id/tv_document_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lbl_registration_certificate"
                android:textColor="@color/white" />

            <com.carnot.custom_views.AppTextViewMedium
                android:id="@+id/tv_document_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/scale_10dp"
                android:layout_marginTop="@dimen/scale_5dp"
                android:drawablePadding="@dimen/scale_10dp"
                android:drawableRight="@drawable/ic_alert_red_small"
                android:gravity="left"
                android:text="September 2017"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>

